<Page
    x:Class="Microsoft.Toolkit.Uwp.SampleApp.Pages.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource Brush-Grey-05}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" Margin="0,36,0,0">
                <TextBlock Text="UWP Community Toolkit Sample App" FontSize="36" Foreground="{StaticResource Brush-Grey-03}" FontWeight="Light" HorizontalAlignment="Center" TextWrapping="WrapWholeWords" TextAlignment="Center" Margin="12,0"/>
                <TextBlock x:Name="Version" TextAlignment="Center" Margin="0,0,0,24"/>
                <TextBlock MaxWidth="500" TextAlignment="Center" TextWrapping="WrapWholeWords" Text="This App is a showcase for the UWP Controls and helpers available from UWP Toolkit. You can find the source code in our GitHub repo (https://github.com/Microsoft/WindowsAppToolkit). All Controls and helpers are available as NuGet packages." Margin="12,0,12,12"/>

                <TextBlock Text="App code" TextAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
                <HyperlinkButton HorizontalAlignment="Center"
                            FontWeight="Light"
                            Foreground="{StaticResource Brush-Blue-01}"
                            NavigateUri="https://github.com/deltakosh/UWPToolkit"
                            FontSize="14" Margin="0,0,0,12">
                    GitHub Repository
                </HyperlinkButton>
                <TextBlock Text="URL" TextAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
                <HyperlinkButton
                            HorizontalAlignment="Center"
                            FontWeight="Light"
                            Foreground="{StaticResource Brush-Blue-01}"
                            NavigateUri="https://dev.windows/com/uwptoolkit"
                            FontSize="14" Margin="0,0,0,12">
                    https://dev.windows/com/uwptoolkit
                </HyperlinkButton>

                <TextBlock Text="Dependencies" TextAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
                <HyperlinkButton
                            HorizontalAlignment="Center"
                            FontWeight="Light"
                            Foreground="{StaticResource Brush-Blue-01}"
                            NavigateUri="http://www.newtonsoft.com/json"
                            FontSize="14">
                    Newtonsoft Json
                </HyperlinkButton>
                <HyperlinkButton
                            HorizontalAlignment="Center"
                            FontWeight="Light"
                            Foreground="{StaticResource Brush-Blue-01}"
                            NavigateUri="https://github.com/google/code-prettify"
                            FontSize="14">
                    Code Prettify
                </HyperlinkButton>
                
                <HyperlinkButton
                            Margin="0,30,0,0"
                            HorizontalAlignment="Center"
                            FontWeight="Light"
                            Foreground="{StaticResource Brush-Blue-01}"
                            NavigateUri="https://go.microsoft.com/fwlink/?LinkId=521839"
                            FontSize="14">
                    Privacy statement
                </HyperlinkButton>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
 
