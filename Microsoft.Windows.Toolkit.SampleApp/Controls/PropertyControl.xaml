<UserControl
    x:Class="Microsoft.Windows.Toolkit.SampleApp.Controls.PropertyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft.Windows.Toolkit.SampleApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContextChanged="PropertyControl_OnDataContextChanged"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ScrollViewer>
        <StackPanel x:Name="RootPanel" Padding="15,20,15,20" Background="{StaticResource AppBarBackgroundThemeBrush}" />
    </ScrollViewer>
</UserControl>
